.container
  .search-bar
    = form_tag search_path, method: :get, id: 'search-query' do
      = text_field_tag :q, nil, placeholder: "Enter keyword..."
      .select-group
        = select_tag :category, options_for_select(categories)
        .selection
          %i{class: "fa fa-caret-down"}
      .select-group
        = select_tag :campus, options_for_select(universities)
        .selection
          %i{class: "fa fa-caret-down"}
      .submit-group
        = submit_tag "Go"
  .links#fix-nav
    .login
      Login
    .register
      Register
    .posting
      Post Ad

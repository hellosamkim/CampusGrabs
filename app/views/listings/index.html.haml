/ Top Main Nav
= render 'nav_1'
/ Top Sub Nav 2
= render 'nav_2'
/ Shows the University
- if current_user.present?
  = render 'primary_campus'

/ Show All Listings
.listings_wrapper
  #listings-container.transitions-enabled
    - @listings.each do |listing|
      .box.panel.panel-default#listing-shadow
        - listing.images[0..0].each_with_index do |image|
          = image_tag image.picture.url, :class => "thumbs"
          %div.breakline
        .panel-body 
          .panel-title
            = listing.title
        %a{:href => listing_path(listing.id)}
          .listing-hover
          .listing-price
            = number_to_currency(listing.price, :precision => 0)
          .listing-details.listing-user
            Listed by 
            = listing.user.username
          - if listing.my_campus?(current_user)
            .listing-details.listing-campus.current-user
              = listing.campus
          - else
            .listing-details.listing-campus
              = listing.campus
#listings-container.transitions-enabled.infinite-scroll
  - @listings.each do |listing|
    .box.panel.panel-default#listing-shadow
      - listing.images[0..0].each_with_index do |image|
        = image_tag image.picture.thumb.url, :class => "thumbs"
        %div.breakline
      .panel-body 
        .panel-title
          = listing.title
      %a{:href => listing_path(listing.id)}
        .listing-hover
        .listing-price
          = number_to_currency(listing.price, :precision => 0)
        .listing-details.listing-user
          Listed by 
          = listing.user.username
        .listing-details.listing-time
          = listing.created_at.strftime("%b %-d, %Y")
= paginate @listings
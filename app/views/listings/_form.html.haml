= simple_form_for @listing, html: { multipart: true } do |f|
  %form
    %div.form-group
      = f.input :title, :class => "form-control"
    %div.form-group
      = f.input :description, :class => "form-control"
    %div.form-group
      = f.input :price, :class => "form-control"
    %div.form-group
      = f.label :campus
      %div
        = f.select :campus, options_for_select(@listing.universities), label: "Campus"
    %div.form-group
      = f.label :type_of_listing
      %div
        = f.select :type_of_listing, options_for_select(["Buy", "Sell"]), label: "Buy or Sell"
    %div.actions
      = f.button :submit, :class => "btn btn-primary"
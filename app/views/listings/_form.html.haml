= form_for(@listing) do |f|
  - if @listing.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@listing.errors.count, "error")
        %p prohibited this product from being saved:
        %ul
        - @listing.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :name
    = f.text_field :name
  %div.field
    = f.label :description
    = f.text_area :description
  %div.field
    = f.label :price_in_cents
    = f.number_field :price_in_cents
  %div.actions
    = f.submit
%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      / Toggles right menu for mobile view
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      / Nav Logo
      .navbar-brand
        %a{:href => listings_path}
          %img{:src => "/images/logo2.png", :class => "nav-logo"}
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav#nav-position
        %li#only-mobile
          %a{:href => listings_path}
            Home
          / Show menu for logged in users
        - if user_signed_in?
          %li.dropdown#nav-menu
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button", :class => "username-bounce"} 
              = current_user.username
            %ul.dropdown-menu#nav-drop-menu{:role => "menu"}
              %li
                = link_to user_path(current_user) do
                  %i{:class => "fa fa-user"}  &nbsp&nbsp
                  Profile
              %li
                = link_to my_listings_path(current_user) do
                  %i{:class => "fa fa-briefcase"} &nbsp
                  My Listings
              %li.divider
              %li
                = link_to user_edit_path(current_user) do
                  %i{:class => "fa fa-cog"} &nbsp
                  Profile Settings
              %li
                = link_to logout_path, method: :delete do
                  %i{:class => "fa fa-sign-out"} &nbsp
                  Sign Out
          / Show menu for users not logged in
        - else
          .login-register-wrapper
            .login-button{"data-target" => "#login", "data-toggle" => "modal", :type => "button"}
              Login
            .register-button{"data-target" => "#register", "data-toggle" => "modal", :type => "button"}
              Sign Up
%div.breakline-with-shadow

/ Login Modal Starts here
#login.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×      
        %h4#myModalLabel.modal-title Login
      .modal-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true, :label => "Email"
            = f.input :password, required: false
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in"
        .forgot-pw
          = link_to "Forgot Password", new_password_path(resource_name)

/ Register Modal Starts here
#register.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#myModalLabel.modal-title Sign Up
      .modal-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f|
          = f.error_notification
          .form-inputs
            = f.input :username, required: true, autofocus: true
            = f.input :email, required: true
            = f.input :first_name, required: true
            = f.input :last_name, required: true
          .form-group
            = f.label :campus
            %div
              = f.select :campus, options_for_select(universities), label: "School Attending"
            = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
            = f.input :password_confirmation, required: true
            = f.file_field :avatar 
            = f.hidden_field :avatar_cache
            = f.input :facebook
            = f.input :twitter
          .form-actions
            = f.button :submit, "Sign up"










            
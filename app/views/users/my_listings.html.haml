/ Top Main Nav
= render '/listings/nav_1'
/ Top Sub Nav 2
= render '/listings/nav_3'


.my-listings-head
  Displaying
  = pluralize(current_user.listings.count, "Listing")
  
.my-each-listings
  - current_user.listings.each do |listing|
    .row.my-listings
      .col-md-6.my-listings
        .my-listing-images
          %a{:href => listing_path(listing.id)}
            - listing.images[0..0].each_with_index do |image|
              = image_tag image.picture.url, :class => "thumbs"
      .col-md-6.my_listings
        = listing.title
= render '/listings/nav_1'

%h2 Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f|
  = f.error_notification
  .form-inputs
    = f.input :username, required: true, autofocus: true
    = f.input :email, required: true
    = f.input :first_name, required: true
    = f.input :last_name, required: true
    .form-group
      = f.label :campus
      %div
        = f.select :campus, options_for_select(@user.universities), label: "School Attending"
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
    = f.input :password_confirmation, required: true
    = f.file_field :avatar 
    = f.hidden_field :avatar_cache
    = f.input :facebook
    = f.input :twitter
  .form-actions
    = f.button :submit, "Sign up"